subroutine triad(a, b, scalar, c)
real, intent(in) :: a(:) 
real, intent(in) :: b(:) 
real, intent(in) :: scalar 
real, intent(out) :: c(:) 
integer :: N 
integer :: N2 
integer :: i 
integer :: j 
N = size(a)
N2 = size(b)
!$OMP PARALLEL DO
do i = 1:N
    c(i) = (a(i)) + ((scalar)*(b(i)))
end do
!$OMP END PARALLEL DO
!$OMP PARALLEL DO
do j = 1:N2
    c(j) = (b(j)) + (scalar)
end do
!$OMP END PARALLEL DO
end subroutine triad

