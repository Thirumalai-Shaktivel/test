#include <iostream>
#include <vector>
#include <Kokkos_Core.hpp>

template <typename T>
Kokkos::View<T*> from_std_vector(const std::vector<T> &v)
{
    Kokkos::View<T*> r("r", v.size());
    for (size_t i=0; i < v.size(); i++) {
        r(i) = v[i];
    }
    return r;
}

int main(int argc, char* argv[])
{
    Kokkos::initialize(argc, argv);
    {
        int i;
        float r;
        float x;
        r = 1.5;
        i = 2;
        x = i*i;
        x = r*r;
        x = i*r;
        x = r*i;
        x = i + i;
        x = r + r;
        x = r + i;
        x = i + r;
        x = i - i;
        x = r - r;
        x = r - i;
        x = i - r;
        x = i/i;
        x = r/r;
        x = i/r;
        x = r/i;
    }
    Kokkos::finalize();
    return 0;
}
